
  <h2>Books</h2>
    <table class= "table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
  
      <tbody>
        <% books.each do |book|%>
          <tr>
               
               <td><%= link_to (image_tag book.user.get_profile_image(100,100)), user_path(book.user.id) %></td>
            
            <td><%=link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <%end%>
      </tbody>
    </table>